
@model IEnumerable<CollectiveModel>

@{
    ViewData["Title"] = "My Groups";
}
<div style="padding-top:15px;">
    <h1>@ViewData["Title"]</h1>

    <hr />

    <table id="groups" class="display" style="width:100%;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpenseCount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseCount)
                    </td>
                    <td>
                        <a asp-action="ExpensesList" asp-route-id="@item.Id"><i class="fas fa-search"></i> View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/datatables.js"></script>
    <script>
        $(function () {
            BindDataTable("groups");
        });
    </script>
}
